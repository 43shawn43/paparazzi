<!DOCTYPE module SYSTEM "module.dtd">

<module name="motor_vs_flap_slider" dir="ctrl">
  <doc>
    <description>
      Slider that lets you slowly remove motors from the actuation mix,
      such that only flaps are used for attitude control.
    </description>
  </doc>
  <settings>
    <dl_settings>
      <dl_settings NAME="motor_flap_slider">
        <dl_setting var="pitch_slider" min="0.0" step="0.1" max="1.0" shortname="pitch"/>
        <dl_setting var="yaw_slider" min="0.0" step="0.1" max="1.0" shortname="yaw"/>
      </dl_settings>
    </dl_settings>
  </settings>
  <header>
    <file name="motor_vs_flap_slider.h"/>
  </header>
  <init fun="motor_vs_flap_slider_init()"/>
  <periodic fun="motor_vs_flap_slider_periodic()" freq="20"/>
  <makefile>
    <file name="motor_vs_flap_slider.c"/>
  </makefile>
</module>
